#!/bin/bash

# pyenv
export PYENV_ROOT="$HOME/devel/venv/pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"


# virtualenvwrapper
export WORKON_HOME=$HOME/devel/venv/virtualenvs
export PROJECT_HOME=$HOME/devel/venv/Devel
source $HOME/devel/venv/pyenv/versions/3.6.10/bin/virtualenvwrapper.sh 

# disable the default virtualenv prompt
export VIRTUAL_ENV_DISABLE_PROMPT=1

# set new virtualenv prompt
function virtualenv_info {
	[[ -n "$VIRTUAL_ENV" ]] && echo "${VIRTUAL_ENV##*/}"
}
VENV="\$(virtualenv_info)"
PS1=$prompt_color'┌─'$VENV'─${debian_chroot:+($debian_chroot)──}('$info_color'\u${prompt_symbol}\h'$prompt_color')-['$info_color'\w'$prompt_color']\n'$prompt_color'└>\[\033[1;0m\]'

